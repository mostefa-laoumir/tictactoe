<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    >

    <TableRow
        android:gravity="center"

        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <Button
            android:id="@+id/a1"
            android:layout_width="40pt"
            android:layout_height="40pt"
            android:onClick="clk" />

        <Button
            android:id="@+id/a2"
            android:layout_width="40pt"
            android:layout_height="40pt"
            android:onClick="clk" />

        <Button
            android:id="@+id/a3"
            android:layout_width="40pt"
            android:layout_height="40pt"
            android:onClick="clk" />
    </TableRow>

    <TableRow
        android:gravity="center"

        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <Button
            android:id="@+id/b1"
            android:layout_width="40pt"
            android:layout_height="40pt"
            android:onClick="clk" />

        <Button
            android:id="@+id/b2"
            android:layout_width="40pt"
            android:layout_height="40pt"
            android:onClick="clk" />

        <Button
            android:id="@+id/b3"
            android:layout_width="40pt"
            android:layout_height="40pt"
            android:onClick="clk" />
    </TableRow>

    <TableRow
        android:gravity="center"

        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <Button
            android:id="@+id/c1"
            android:layout_width="40pt"
            android:layout_height="40pt"
            android:onClick="clk" />

        <Button
            android:id="@+id/c2"
            android:layout_width="40pt"
            android:layout_height="40pt"
            android:onClick="clk" />

        <Button
            android:id="@+id/c3"
            android:layout_width="40pt"
            android:layout_height="40pt"
            android:onClick="clk" />
    </TableRow>
</TableLayout>